<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
    <img src="<%- blog.ImageUrl %>" width="700" height="500"><br><br>
    <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
    <img src="<%= blog.createdBy.profileImageUrl %> " width="50px"> 
    <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-4" >
        <h1>Comments (<%= (comments.length) %>)</h1>
        <% if (locals.user)  { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-4">
    <div class="mb-3">
      
      <input type="text" class="form-control" name="content" placeholder="Enter your comment" aria-describedby="emailHelp">
    </div>
    <button type="submit" class="btn btn-primary btn btn-sm">Add</button>
    </form>
        <% } %>
    </div>
  
    <div class="container">
  <% comments.forEach(comment => { %>
   <div>
    <img src="<%= comment.createdBy.profileImageUrl %> " width="50px"> 
    <%= comment.createdBy.fullName %>
    <pre><%= comment.content %></pre>
   </div>
  <% }) %>     
    </div>
    <%- include("./partials/script.ejs") %>
</body>
</html>